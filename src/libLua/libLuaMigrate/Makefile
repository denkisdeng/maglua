CXX=g++

CFLAGS=-ansi -g
PKG=lua5.1
INCLUDEPATH=`pkg-config --cflags-only-I $(PKG) `
LIBS=`pkg-config --libs $(PKG) `
OBJECTS=libLuaMigrate.o

LIBNAME=libLuaMigrate

all: $(LIBNAME).a

$(LIBNAME).a : $(OBJECTS)
	ar cqs $(LIBNAME).a $(OBJECTS)

$(LIBNAME).so : $(OBJECTS)
	$(CXX) -fPIC -shared $(OBJECTS) -o $(LIBNAME).so

%.o : %.cpp  %.h
	$(CXX) -fPIC $(INCLUDEPATH) -c $*.cpp -o $*.o 

uninstall: distclean
	rm -f $(LIBNAME).a

clena: clean

clean:
	rm -f *~
	rm -f *.o

distclean: clean
	rm -f $(LIBNAME).a
	rm -f $(BIN)
