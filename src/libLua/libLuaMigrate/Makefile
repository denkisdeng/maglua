CXX=g++

CFLAGS=-ansi -O2 -g
PKG=lua5.1
INCLUDEPATH=`pkg-config --cflags-only-I $(PKG) `
LIBS=`pkg-config --libs $(PKG) `
OBJECTS=libLuaMigrate.o

LIBNAME=libLuaMigrate.a

all: $(LIBNAME)

${LIBNAME} : ${OBJECTS}
	ar cqs ${LIBNAME} ${OBJECTS}

%.o : %.cpp  libLuaMigrate.h
	${CXX} ${INCLUDEPATH} -c $*.cpp -o $*.o 

clena: clean

clean:
	rm -f *~
	rm -f *.o

distclean: clean
	rm -f $(LIBNAME)
